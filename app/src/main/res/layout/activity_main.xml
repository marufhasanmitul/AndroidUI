<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="450dp"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:scaleType="fitXY"
            android:src="@drawable/intro"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UI Lover Chennel"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="25sp"
            android:layout_above="@+id/imageView8"
           android:layout_centerHorizontal="true"
            />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:src="@drawable/logo"
            android:layout_alignParentBottom="true"
            />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome Back To Your App"
            android:textColor="#FFBF03"
            android:textSize="21sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All One You are"
            android:textColor="#574949"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:text="login"
            android:background="@drawable/btn_bg"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="21sp"
            android:layout_marginTop="15dp"
            />
        <TextView
            android:id="@+id/signUpId"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:text="Sing Up"
            android:background="@drawable/btn_bg_round"
            android:gravity="center"
            android:textColor="#FFC107"
            android:textSize="21sp"
            android:layout_marginTop="15dp"
            />

    </LinearLayout>




</LinearLayout>